{{# partial "titulo" }}	
	<title>Jugadores Totales</title>
{{/partial}}
		
{{# partial "contenido" }}	  
<div>
  <h1 class = "text-center">Jugadores Totales</h1>	
</div>	

<div class="row">
	<div class="col-md-12">	
	<table class="table table-striped" >
			<td class="text-center"><b>Nombre</b></td>
			<td><b>Habilidad</b></td>
		</hr>
	{{#jugadores}}
		<tr>
			<td class="text-center"><a class="btn btn-default" href="/receta/{{name}}">{{name}}</a></td>
			<td ><a class="btn btn-default" href="/receta/{{name}}">{{hability}}</a></td>
		</tr>
	{{/jugadores}}				
	</table>
	</div>
	<div class="pull-right">
  <a class="btn btn-primary"   href="/recetas/new">Nueva Receta</a>
</div>
</div>


<form class="form-signin">
<div class="col-sm-6 col-md-4 col-md-offset-4">
        <h2 class="form-signin-heading">   Nuevo jugador</h2>
      
        <input type="text" class="form-control" placeholder="Nombre" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="number" id="inputPassword" class="form-control" placeholder="Habilidad" required="">

        <button class="btn btn-lg btn-primary btn-block" type="submit">Crear</button>
      </form>
    </div>
  </div>

{{/partial}}

